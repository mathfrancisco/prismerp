public class SupplierException extends BusinessException {
    public static class SupplierNotFoundException extends SupplierException {
        public SupplierNotFoundException(Long id) {
            super(String.format("Supplier not found with ID: %d", id),
                  "SUP_001",
                  HttpStatus.NOT_FOUND);
        }
    }
    
    public static class DuplicateDocumentNumberException extends SupplierException {
        public DuplicateDocumentNumberException(String documentNumber) {
            super(String.format("Supplier already exists with document number: %s", documentNumber),
                  "SUP_002",
                  HttpStatus.CONFLICT);
        }
    }
    
    public static class InvalidSupplierStatusException extends SupplierException {
        public InvalidSupplierStatusException(String message) {
            super(message, "SUP_003", HttpStatus.BAD_REQUEST);
        }
    }
    
    public static class DocumentValidationException extends SupplierException {
        public DocumentValidationException(String message) {
            super(message, "SUP_004", HttpStatus.BAD_REQUEST);
        }
    }
    
    public static class EvaluationException extends SupplierException {
        public EvaluationException(String message) {
            super(message, "SUP_005", HttpStatus.BAD_REQUEST);
        }
    }
    
    private SupplierException(String message, String errorCode, HttpStatus httpStatus) {
        super(message, errorCode, httpStatus);
    }